<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/setting_picture_group_header"
                android:id="@+id/textView4"
                android:textColor="#ffffffff"
                android:background="#9c808080"
                android:layout_marginBottom="1dp" />

            <troop.com.themesample.views.menu.MenuItemBayerFormat
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemBayerFormat"
                app:Description="@string/setting_bayerformat_description"
                app:HeaderText="@string/setting_bayerformat_header"
                app:ValueText="bayer-mipi"
                android:layout_marginBottom="1dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemJpegQuality"
                app:Description="@string/setting_jpegquality_description"
                app:HeaderText="@string/setting_jpegquality_header"
                app:ValueText="80"
                android:layout_marginBottom="1dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemPicSize"
                app:Description="@string/setting_picturesize_description"
                app:HeaderText="@string/setting_picturesize_header"
                app:ValueText="1920x1080"
                android:layout_marginBottom="1dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/menuTextColor"
                android:background="#13ffffff"
                android:layout_marginBottom="1dp"
                android:id="@+id/div1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/setting_video_group_header"
                android:textColor="#ffffffff"
                android:background="#9c808080"
                android:layout_marginBottom="1dp" />

            <troop.com.themesample.views.menu.MenuItemVideoProfile
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemVideoProfile"
                app:Description="@string/setting_videoprofile_description"
                app:HeaderText="@string/setting_videoprofile_header"
                app:ValueText="1080p"
                android:layout_marginBottom="1dp" />

            <troop.com.themesample.views.menu.MenuItemVideoHDR
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemVideHDR"
                app:Description="@string/setting_videohdr_description"
                app:HeaderText="@string/setting_videohdr_header"
                app:ValueText="OFF"
                android:layout_marginBottom="1dp" />

            <troop.com.themesample.views.menu.MenuItemTimeLapseFrames
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemTimeLapseFrame"

                android:layout_marginBottom="1dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/menuTextColor"
                android:background="#13ffffff"
                android:layout_marginBottom="1dp"
                android:id="@+id/div2" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/setting_hdr_"
                android:id="@+id/textView5"
                android:textColor="#ffffffff"
                android:background="#9c808080"
                android:layout_marginBottom="1dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemAeBracket"
                app:Description="@string/setting_aebracket_description"
                app:HeaderText="@string/setting_aebracket_header"
                app:ValueText="OFF"
                android:layout_marginBottom="1dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/menuTextColor"
                android:background="#13ffffff"
                android:layout_marginBottom="1dp"
                android:id="@+id/div3" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/setting_freedcam_"
                android:id="@+id/textView6"
                android:textColor="#ff000000"
                android:background="#ffffffff"
                android:layout_marginBottom="1dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemApi"
                app:Description="@string/setting_api_description"
                app:HeaderText="@string/setting_api_header"
                app:ValueText="Camera1"
                android:layout_marginBottom="1dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemExternalShutter"
                app:Description="@string/setting_externalshutter_description"
                app:HeaderText="@string/setting_externalshutter_header"
                app:ValueText="Hook"
                android:layout_marginBottom="1dp" />

            <troop.com.themesample.views.menu.MenuItemGPS
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemGPS"
                app:Description="@string/setting_location_description"
                app:HeaderText="@string/setting_location_header"
                app:ValueText="OFF"
                android:layout_marginBottom="1dp" />

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemGuide"
                app:Description="@string/setting_guide_description"
                app:HeaderText="@string/setting_guide_header"
                app:ValueText="Golden Ratio"
                android:layout_marginBottom="1dp" />

            <!--<troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemHistogram"
                app:Description="Enables a rgb histogram"
                app:HeaderText="Histogram: "
                app:ValueText="OFF"
                android:layout_marginBottom="1dp" />-->

            <troop.com.themesample.views.menu.MenuItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemFocusPeak"
                app:Description="@string/setting_focuspeak_description"
                app:HeaderText="@string/setting_focuspeak_header"
                app:ValueText="OFF"
                android:layout_marginBottom="1dp"
                android:visibility="gone" />

            <troop.com.themesample.views.menu.MenuItemOrientationHack
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemOrientationHack"
                app:Description="@string/setting_orientation_description"
                app:HeaderText="@string/setting_orientation_header"
                app:ValueText="OFF"
                android:layout_marginBottom="1dp" />

            <troop.com.themesample.views.menu.MenuItemSDSave
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemSDSave"
                app:Description="@string/setting_sdcard_description"
                app:HeaderText="@string/setting_sdcard_header"
                app:ValueText="Internal"
                android:layout_marginBottom="1dp" />

            <troop.com.themesample.views.menu.MenuItemTheme
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemTheme"
                app:Description="@string/setting_theme_description"
                app:HeaderText="@string/setting_theme_header"
                app:ValueText="Test"
                android:layout_marginBottom="1dp"
                android:visibility="gone" />

            <troop.com.themesample.views.menu.MenuItemSaveCamParams
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MenuItemSaveParams"
                app:Description="@string/setting_savecamparams_description"
                app:HeaderText="@string/setting_savecamparams_header"
                app:ValueText="Test"
                android:layout_marginBottom="1dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>