<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView_Crosshair"
        android:background="@drawable/crosshair_circle_normal"
        android:visibility="gone" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView_meteringarea"
        android:background="@drawable/exposure_metering" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView_awbarea"
        android:background="@drawable/crosshair_metering" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageViewFocusClose"
        android:background="@drawable/focusclose"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/shuttericon_size" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/menuBackgColor"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:id="@+id/textView_time"
            android:textSize="@dimen/infoOverlayTextSize"
            android:layout_marginLeft="@dimen/infoOverlayTextMargine"
            android:textColor="@color/menuTextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:id="@+id/textView_format"
            android:textSize="@dimen/infoOverlayTextSize"
            android:layout_marginLeft="@dimen/infoOverlayTextMargine"
            android:textColor="@color/menuTextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:id="@+id/textView_size"
            android:textSize="@dimen/infoOverlayTextSize"
            android:layout_marginLeft="@dimen/infoOverlayTextMargine"
            android:textColor="@color/menuTextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:id="@+id/textView_storage"
            android:textSize="@dimen/infoOverlayTextSize"
            android:layout_marginLeft="@dimen/infoOverlayTextMargine"
            android:textColor="@color/menuTextColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="-"
            android:id="@+id/textView_battery"
            android:textSize="@dimen/infoOverlayTextSize"
            android:layout_marginLeft="@dimen/infoOverlayTextMargine"
            android:textColor="@color/menuTextColor" />
    </LinearLayout>

    <ImageView
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="@android:dimen/app_icon_size"
        android:id="@+id/fastsettings_button"
        android:background="@drawable/settings"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/left_ui_holder">

        <troop.com.themesample.views.uichilds.UiSettingsChild
            android:layout_width="@dimen/uiSettingsWidth"
            android:layout_height="wrap_content"
            android:id="@+id/wb"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            app:HeaderText="WB"/>

        <troop.com.themesample.views.uichilds.UiSettingsChild
            android:layout_width="@dimen/uiSettingsWidth"
            android:layout_height="wrap_content"
            android:id="@+id/ui_settings_iso"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            app:HeaderText="Iso"/>

        <troop.com.themesample.views.uichilds.UiSettingsChild
            android:layout_width="@dimen/uiSettingsWidth"
            android:layout_height="wrap_content"
            android:id="@+id/Flash"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            app:HeaderText="Flash"/>

        <troop.com.themesample.views.uichilds.UiSettingsChild
            android:layout_width="@dimen/uiSettingsWidth"
            android:layout_height="wrap_content"
            android:id="@+id/focus_uisetting"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            app:HeaderText="Focus"/>

        <troop.com.themesample.views.uichilds.UiSettingsChild
            android:layout_width="@dimen/uiSettingsWidth"
            android:layout_height="wrap_content"
            android:id="@+id/Ae"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            app:HeaderText="AE"/>

        <troop.com.themesample.views.uichilds.UiSettingsChild
            android:layout_width="@dimen/uiSettingsWidth"
            android:layout_height="wrap_content"
            android:id="@+id/night"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            app:HeaderText="Night"/>
        <troop.com.themesample.views.uichilds.UiSettingsChild
            android:layout_width="@dimen/uiSettingsWidth"
            android:layout_height="wrap_content"
            android:id="@+id/continousShot"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            app:HeaderText="Continous Shoot Mode"/>
        <troop.com.themesample.views.uichilds.UiSettingsChildFormat
            android:layout_width="@dimen/uiSettingsWidth"
            android:layout_height="wrap_content"
            android:id="@+id/format"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            app:HeaderText="Format"/>

        <troop.com.themesample.views.uichilds.UiSettingsMenu
            android:layout_width="@dimen/uiSettingsWidth"
            android:layout_height="wrap_content"
            android:id="@+id/menu"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="1dp"
            app:HeaderText="Settings"/>


    </LinearLayout>

    <troop.com.themesample.views.ShutterButton
        android:layout_width="@dimen/shuttericon_size"
        android:layout_height="@dimen/shuttericon_size"
        android:id="@+id/shutter_button"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/improve_multishoot" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="@dimen/uiSettingsWidth"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:id="@+id/right_ui_holder">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <troop.com.themesample.views.ThumbView
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@android:dimen/app_icon_size"
                android:id="@+id/thumbview"
                android:background="@drawable/thumbnail"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <troop.com.themesample.views.uichilds.UiSettingsChildCameraSwitch
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/camera_switch"
                app:HeaderText="Camera"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="2dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="false"
            android:gravity="bottom">

            <troop.com.themesample.views.uichilds.UiSettingsChildModuleSwitch
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mode_switch"
                app:HeaderText="Mode"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp" />

            <troop.com.themesample.views.uichilds.UiSettingsChildExit
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/exit"
                app:HeaderText="Exit"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cameraui_values_fragment_holder"
        android:layout_centerInParent="true"></FrameLayout>

</RelativeLayout>