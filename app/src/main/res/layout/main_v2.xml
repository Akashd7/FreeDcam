<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff000000"
    android:keepScreenOn="true"
    android:longClickable="false"
    android:touchscreenBlocksFocus="true">



    <com.troop.freedcam.ui.TextureView.PreviewHandler
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/CameraPreview" />


    <com.troop.freedcam.ui.handler.GuideHandler
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.troop.freedcam.ui.handler.GuideHandler"
        android:id="@+id/GuideView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <com.troop.freedcam.ui.handler.HelpOverlayHandler
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/helpoverlay"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginRight="80dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/counter"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0:00:00"
            android:id="@+id/textView_RecCounter"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:rotation="0"
            android:autoText="false"
            android:textSize="50dp"
            android:layout_gravity="bottom" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/screen_flash"
        android:background="#ff0808ff"
        android:alpha="0.5"></LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="false"
        android:gravity="center_vertical|center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loadingspinner"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView_UImessage"
            android:background="#88000000"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView_Crosshair"
        android:background="@drawable/ic_cross_focus"
        android:visibility="gone" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView_meteringarea"
        android:background="@drawable/crosshair_exposure" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageViewFocusClose"
        android:background="@drawable/focusclose"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:id="@+id/manualMenuHolder">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#a4a0a0a0"
            android:id="@+id/v2_manual_menu"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/v2_seekbar_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView_seekbar"
                android:rotation="0"
                android:textColor="#ffc8c8c8"
                android:layout_gravity="center_horizontal" />

            <SeekBar
                android:layout_width="280dp"
                android:layout_height="@dimen/app_icon_size"
                android:id="@+id/seekBar_manual"
                android:splitTrack="false"
                android:background="#785a5555"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textViewTime" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1000"
            android:id="@+id/txtViewRemainingStorage"
            android:singleLine="true"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="100%"
            android:id="@+id/txtViewBattLevel"
            android:singleLine="false"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="DNG"
            android:id="@+id/textViewFormat"
            android:singleLine="true"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="4208x3120"
            android:id="@+id/textViewRes"
            android:singleLine="true"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/appiconsizedouble"
            android:id="@+id/imageView_Thumbnail"
            android:layout_gravity="bottom|left"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentLeft="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/v2_settings_menu"

        android:layout_alignParentLeft="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/settings_menuHolder">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/expandableListViewSettings"
                android:orientation="vertical"
                android:layout_marginLeft="3dp"
                android:paddingRight="1dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/groupSubMenu"
                android:paddingRight="1dp"></LinearLayout>

            <ListView
                android:layout_width="@dimen/menuwidth"
                android:layout_height="wrap_content"
                android:id="@+id/subMenuSettings"
                android:background="@color/menuBackgroundColor" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/layout__cameraControls"
        android:clickable="true"
        android:layout_alignParentEnd="false"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="false">

        <ImageView
            android:layout_width="@dimen/SizeCameraControls"
            android:layout_height="@dimen/SizeCameraControls"
            android:id="@+id/imageView_cameraSwitch"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:clickable="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="@dimen/SizeCameraControls"
                android:layout_height="@dimen/SizeCameraControls"
                android:id="@+id/textView_ModuleSwitch"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_mode"
                android:text="test"
                android:singleLine="true"
                android:textSize="@dimen/TextSizeSmall"
                android:clickable="true"
                android:paddingTop="18dp"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/appiconsizedouble"
            android:layout_height="@dimen/appiconsizedouble"
            android:id="@+id/shutter_imageview"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:longClickable="false"
            android:background="@drawable/improve_multishoot"
            android:clickable="true"
            android:layout_marginBottom="2dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="@dimen/SizeCameraControls"
                android:layout_height="@dimen/SizeCameraControls"
                android:text="log"
                android:id="@+id/textView_flashSwitch"
                android:background="@drawable/button_flash"
                android:singleLine="true"
                android:password="false"
                android:textSize="@dimen/TextSizeSmall"
                android:clickable="true"
                android:paddingTop="18dp"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="@dimen/SizeCameraControls"
                android:layout_height="@dimen/SizeCameraControls"
                android:text="log"
                android:id="@+id/textView_nightmode"
                android:background="@drawable/button_night"
                android:textSize="@dimen/TextSizeSmall"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:paddingTop="18dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="@dimen/SizeCameraControls"
                android:layout_height="@dimen/SizeCameraControls"
                android:id="@+id/imageView_exposurelock" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="@dimen/SizeCameraControls"
                android:layout_height="@dimen/SizeCameraControls"
                android:text="Exit"
                android:id="@+id/textView_Exit"
                android:background="@drawable/button_clean"
                android:singleLine="true"
                android:password="false"
                android:textSize="@dimen/TextSizeSmall"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moduleSwitch_placeholder"
            android:layout_gravity="bottom">

            <ListView
                android:layout_width="@dimen/submenuWidth"
                android:layout_height="wrap_content"
                android:id="@+id/listView_popup"
                android:headerDividersEnabled="false"
                android:background="#b0000000" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
