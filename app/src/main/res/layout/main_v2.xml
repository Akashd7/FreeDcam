<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:keepScreenOn="true"
    android:longClickable="true">



    <com.troop.freedcam.ui.TextureView.PreviewHandler
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/CameraPreview" />


    <com.troop.freedcam.ui.handler.GuideHandler
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        class="com.troop.freedcam.ui.handler.GuideHandler"
        android:id="@+id/GuideView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <com.troop.freedcam.ui.handler.HelpOverlayHandler
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/helpoverlay"
        android:gravity="center_vertical"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/screen_flash"
        android:focusableInTouchMode="false"
        android:background="#ff0808ff"
        android:alpha="0.5"></LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loadingspinner"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView_Crosshair"
        android:background="@drawable/ic_cross_focus"
        android:visibility="gone" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:id="@+id/manualMenuHolder">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffcacaca"
            android:id="@+id/v2_manual_menu"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|bottom"
            android:id="@+id/v2_seekbar_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView_seekbar"
                android:rotation="270"
                android:layout_marginRight="292dp"
                android:textColor="#ffc8c8c8" />

            <SeekBar
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar_manual"
                android:rotation="270"
                android:layout_marginBottom="160dp"
                android:layout_marginLeft="200dp"
                android:thumb="@drawable/thub"
                android:splitTrack="false"
                android:background="#785a5555" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:textColor="#ffc8c8c8"
            android:shadowColor="#ffffffff"
            android:phoneNumber="false"
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1000"
            android:id="@+id/txtViewRemainingStorage"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="100%"
            android:id="@+id/txtViewBattLevel"
            android:singleLine="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="DNG"
            android:id="@+id/textViewFormat"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="4208x3120"
            android:id="@+id/textViewRes"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="@dimen/appiconsizedouble"
            android:layout_height="@dimen/appiconsizedouble"
            android:id="@+id/imageView_Thumbnail"
            android:layout_gravity="bottom|left"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentLeft="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/menuwidth"
        android:layout_height="wrap_content"
        android:id="@+id/v2_settings_menu"
        android:focusable="false"

        android:layout_alignParentLeft="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/menuwidth"
            android:layout_height="fill_parent"
            android:id="@+id/settings_menuHolder"
            android:background="#f97f7f7f">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/subMenuSettings"
                android:background="#ff000000" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView_ExpandAbleListView" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/expandableListViewSettings"
                    android:background="#b0b3b3b3"
                    android:orientation="vertical" />
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moduleSwitch_placeholder"
            android:layout_gravity="bottom">

            <ListView
                android:layout_width="@dimen/submenuWidth"
                android:layout_height="wrap_content"
                android:id="@+id/listView_popup"
                android:headerDividersEnabled="false"
                android:background="#b0000000" />

        </LinearLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/bg4shut"
            android:background="@drawable/divide"
            android:layout_marginRight="-70dp"
            android:visibility="visible" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/layout__cameraControls"
            android:layout_marginLeft="10dp"
            android:clickable="true">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/imageView_cameraSwitch"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:layout_alignParentTop="false"
                android:clickable="true"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="9dp" />

            <ImageView
                android:layout_width="@dimen/appiconsizedouble"
                android:layout_height="@dimen/appiconsizedouble"
                android:id="@+id/shutter_imageview"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:longClickable="false"
                android:background="@drawable/improve_multishoot"
                android:clickable="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="15dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/textView_ModuleSwitch"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/ic_mode"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="test"
                    android:singleLine="true"
                    android:textSize="@dimen/TextSizeSmall"
                    android:clickable="true"
                    android:paddingTop="18dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="log"
                    android:id="@+id/textView_flashSwitch"
                    android:background="@drawable/ic_flash"
                    android:gravity="center_vertical|center_horizontal"
                    android:singleLine="true"
                    android:password="false"
                    android:textSize="@dimen/TextSizeSmall"
                    android:clickable="true"
                    android:paddingTop="18dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="log"
                    android:id="@+id/textView_nightmode"
                    android:background="@drawable/ic_mode_night"
                    android:textSize="@dimen/TextSizeSmall"
                    android:singleLine="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:clickable="true"
                    android:paddingTop="18dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="@dimen/app_icon_size"
                android:layout_height="@dimen/app_icon_size"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_exposurelock" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/app_icon_size"
                android:layout_height="@dimen/app_icon_size"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="35dp">

                <TextView
                    android:layout_width="@dimen/app_icon_size"
                    android:layout_height="@dimen/app_icon_size"
                    android:text=""
                    android:id="@+id/textView_Exit"
                    android:background="@drawable/ic_exit_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:singleLine="true"
                    android:password="false"
                    android:textSize="@dimen/TextSizeSmall"
                    android:clickable="true" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/counter">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0:00:00"
            android:id="@+id/textView_RecCounter"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:rotation="0"
            android:autoText="false"
            android:textSize="50dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="300dp" />

    </LinearLayout>

</RelativeLayout>