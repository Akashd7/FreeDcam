<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res/com.troop.freecam"
    android:layout_height="wrap_content"
    android:id="@+id/manualControl_Layout"
    android:longClickable="false">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <com.troop.freecam.controls.ExtendedCheckBox
                android:layout_width="@dimen/app_icon_size"
                android:layout_height="@dimen/app_icon_size"
                android:id="@+id/checkBox_exposureManual"
                android:background="@drawable/icon_manual_exposure"
                android:textColor="#ff0000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <com.troop.freecam.controls.ExtendedCheckBox
                android:layout_width="@dimen/app_icon_size"
                android:layout_height="@dimen/app_icon_size"
                android:id="@+id/checkBox_sharpness"
                android:background="@drawable/icon_manual_sharpness"
                android:textColor="#ff0000" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.troop.freecam.controls.ExtendedCheckBox
                android:layout_width="@dimen/app_icon_size"
                android:layout_height="@dimen/app_icon_size"
                android:id="@+id/checkBox_saturation"
                android:background="@drawable/icon_manual_saturation"
                android:checked="false"
                android:textColor="#ff0000" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.troop.freecam.controls.ExtendedCheckBox
                android:layout_width="@dimen/app_icon_size"
                android:layout_height="@dimen/app_icon_size"
                android:id="@+id/checkBox_brightness"
                android:background="@drawable/icon_manual_brightnes"
                android:textColor="#ff0000"
                android:singleLine="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.troop.freecam.controls.ExtendedCheckBox
                android:layout_width="@dimen/app_icon_size"
                android:layout_height="@dimen/app_icon_size"
                android:id="@+id/checkBox_contrast"
                android:background="@drawable/icon_manual_contrast" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.troop.freecam.controls.ExtendedCheckBox
                android:layout_width="@dimen/app_icon_size"
                android:layout_height="@dimen/app_icon_size"
                android:id="@+id/checkBox_manualConvergence"
                android:background="@drawable/icon_manual_convergence" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.troop.freecam.controls.ExtendedCheckBox
                android:layout_width="@dimen/app_icon_size"
                android:layout_height="@dimen/app_icon_size"
                android:id="@+id/checkBox_focus"
                android:background="@drawable/icon_manual_focus" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.troop.freecam.controls.ExtendedCheckBox
                android:layout_width="@dimen/app_icon_size"
                android:layout_height="@dimen/app_icon_size"
                android:id="@+id/checkBox_manualShutter"
                android:background="@drawable/icon_manual_exposure" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>